<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/seconder_content</item>
        <item name="android:textColorPrimary">@color/primer_content</item>
        <item name="colorPrimaryVariant">@color/primer_content</item>
        <item name="colorPrimaryDark">@color/dark_item_background</item>
        <item name="colorOnPrimary">@color/primer_content</item>
        <item name="android:windowBackground">@color/primer_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:colorBackground">@color/primer_content</item>
        <item name="color">@color/primer_content</item>
    </style>
    <style name="Button_Toolbar">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="colorPrimary">@color/seconder_content</item>
        <item name="android:textColorPrimary">@color/primer_content</item>
        <item name="colorPrimaryVariant">@color/primer_content</item>
        <item name="colorPrimaryDark">@color/seconder_content</item>
        <item name="colorOnPrimary">@color/primer_content</item>
        <item name="android:windowBackground">@color/primer_content</item>
        <item name="android:textColorSecondary">@color/primer_content</item>
        <!-- Primary brand font -->
        <item name="android:colorBackground">@color/dark_item_background</item>
        <item name="android:background">@color/dark_item_background</item>
        <item name="color">@color/primer_content</item>
        <item name="android:textColor">@color/primer_content</item>
        <item name="android:statusBarColor">@color/dark_item_background</item>
        <item name="android:colorButtonNormal">@color/dark_item_background</item>
    </style>

    <style name="Menu_Toolbar">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="colorPrimary">@color/seconder_content</item>
        <item name="android:textColorPrimary">@color/primer_content</item>
        <item name="colorPrimaryVariant">@color/primer_content</item>
        <item name="colorPrimaryDark">@color/seconder_content</item>
        <item name="colorOnPrimary">@color/primer_content</item>
        <item name="android:windowBackground">@color/primer_content</item>
        <item name="android:textColorSecondary">@color/primer_content</item>
        <!-- Primary brand font -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:background">@color/dark_background</item>
        <item name="color">@color/seconder_content</item>
        <item name="android:textColor">@color/primer_content</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:colorButtonNormal">@color/dark_background</item>
    </style>

    <style name="RecyclerView">
        <item name="android:textColor">@color/seconder_content</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
    </style>
    <style name="RecyclerViewTeacherDetails">
        <item name="android:background">@color/primer_content</item>
        <item name="android:textColor">@color/seconder_content</item>
    </style>
    <style name="RecyclerViewTeacherTimetableBox">
        <item name="colorOnPrimary">@color/dark_item_background</item>
        <item name="android:background">@drawable/rounded_rectangle_box</item>
        <item name="android:textColor">@color/primer_content</item>
    </style>
    <style name="ProgressBar">
        <item name="colorAccent">@color/dark_item_background</item> <!-- Whatever color you want-->
    </style>
    <style name="Menu">
        <item name="android:textColor">@color/menu</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>