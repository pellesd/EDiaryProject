<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/line"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/RecyclerView"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/primer_content"
            android:textColor="@color/seconder_content"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Horváth Jenő" />

        <LinearLayout
            android:id="@+id/grades_layout"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:background="#00FFFFFF"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/red"
                    android:text="1"
                    android:textColor="@color/seconder_content"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/orange"
                    android:text="2"
                    android:textColor="@color/seconder_content"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/yellow"
                    android:text="3"
                    android:textColor="@color/seconder_content"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/yellowish_green"
                    android:text="4"
                    android:textColor="@color/seconder_content"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/green"
                    android:text="5"
                    android:textColor="@color/seconder_content"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/medium"
                    android:text="Mégsem"
                    android:textColor="@color/seconder_content"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>